{
  "version": "1.0.0",
  "author": "vampiire",
  "license": "UNLICENSED",
  "name": "pg-api",
  "description": "pg redesign GraphQL API",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pg-redesign/public-api.git"
  },
  "bugs": {
    "url": "https://github.com/pg-redesign/public-api/issues"
  },
  "environment": {
    "PORT": "API server listening port",
    "API_DOMAIN": "hosted API domain for signing auth tokens",
    "CLIENT_ORIGIN": "hosted client URL for CORS whitelist",
    "ADMIN_CLIENT_ORIGIN": "hosted admin client URL for CORS whitelist",
    "DB_NAME": "database name",
    "DB_USER": "database user name",
    "DB_PASSWORD": "database user password",
    "DB_HOST": "database host name / IP address",
    "EMAIL_DOMAIN": "automated email sending domain",
    "AWS_SES_ACCESS_KEY_ID": "AWS SES mailer credentials",
    "AWS_SES_SECRET_ACCESS_KEY": "AWS SES mailer credentials",
    "AWS_COGNITO_DOMAIN": "AWS cognito authentication domain in <registered domain name>.auth.<region> form",
    "AWS_COGNITO_CLIENT_ID": "registered cognito application ID",
    "AWS_COGNITO_REDIRECT_URI": "redirect location on successful cognito auth",
    "ADMIN_SUBS": "AWS cognito registered admin sub IDs in CSV format",
    "AUTH_TOKEN_SIGNING_SECRET": "signing secret for auth tokens",
    "STRIPE_API_KEY": "Stripe payment processing",
    "MAILCHIMP_API_KEY": "MailChimp mailing list control",
    "MAILCHIMP_NEWSLETTER_ID": "MailChimp newsletter mailing list",
    "ERROR_LOGS_DIR": "relative / absolute path for error log files to be written",
    "COMBINED_LOGS_DIR": "relative / absolute path for combined log files to be written"
  },
  "main": "src",
  "scripts": {
    "start": "node src",
    "env:dev": "env $(< .env)",
    "env:test": "env $(< .test.env)",
    "dev": "npm run env:dev -- nodemon",
    "knex:seed": "knex seed:run",
    "knex:migrate": "knex migrate:latest",
    "knex:seed:admins": "knex seed:run --specific make-admins.js",
    "lint": "eslint .",
    "prettify": "prettier --write 'src/**/*.js'",
    "test": "jest --runInBand --no-cache",
    "test:local": "npm run env:test -- jest --runInBand",
    "test:travis": "npm run test -- --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "@okgrow/graphql-scalars": "^0.4.5",
    "@types/stripe": "^6.26.5",
    "@vampiire/node-logger": "^0.3.0",
    "ajv": "^6.10.0",
    "apollo-directive": "^0.1.1",
    "apollo-error-converter": "^1.1.0",
    "apollo-server-express": "^2.6.7",
    "aws-sdk": "^2.475.0",
    "axios": "^0.19.0",
    "ejs": "^2.6.2",
    "express": "^4.17.1",
    "express-winston": "^3.2.0",
    "graphql": "^14.3.1",
    "graphql-import": "^0.7.1",
    "graphql-type-json": "^0.3.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.19.5",
    "nodemailer": "^6.2.1",
    "objection": "^2.x.x",
    "pg": "^7.11.0",
    "stripe": "^7.1.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "apollo-server-testing": "^2.7.2",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.0",
    "prettier": "^1.18.2",
    "sonarqube-scanner": "^2.4.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "commonjs": true,
      "jest/globals": true
    },
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended",
      "prettier"
    ],
    "plugins": [
      "jest",
      "prettier"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "nodemonConfig": {
    "ext": "graphql, js"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 80,
    "singleQuote": false,
    "proseWrap": "never",
    "trailingComma": "all"
  }
}
